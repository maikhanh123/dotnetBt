@model BTSession03.Models.Product
@{
    ViewBag.Title = "DetailViewModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<div class="row">
    <div class="col-md-6 product_img">
        <img src="@Model.Imageurl" class="img-responsive center-img">
    </div>
    <div class="col-md-6 product_content">
        <h4>@Model.Name</h4>

        <div class="rating">
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            (10 reviews)
        </div>
        <h5><strong>Category:</strong> @Model.CategoryName</h5>
        <h5><strong>Description</strong></h5>
        <p>@Model.Description</p>
        <h3 class="cost"> @Model.Price.ToString("C2") </h3>
        <br />
        <div class="row" style="margin-bottom: 10px">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <select class="form-control" name="select">
                    <option value="" selected="">Color</option>
                    <option value="black">Black</option>
                    <option value="white">White</option>
                    <option value="gold">Gold</option>
                    <option value="rose gold">Rose Gold</option>
                </select>
            </div>
            <!-- end col -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <select class="form-control" name="select">
                    <option value="">Capacity</option>
                    <option value="">16GB</option>
                    <option value="">32GB</option>
                    <option value="">64GB</option>
                    <option value="">128GB</option>
                </select>
            </div>
            <!-- end col -->
            <div class="col-md-4 col-sm-12">
                <select class="form-control" name="select">
                    <option value="" selected="">QTY</option>
                    <option value="">1</option>
                    <option value="">2</option>
                    <option value="">3</option>
                </select>
            </div>
            <!-- end col -->
        </div>
        <div class="space-ten"></div>
        <div class="btn-ground">
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart</button>
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-heart"></span> Add To Wishlist</button>
        </div>
    </div>
</div>