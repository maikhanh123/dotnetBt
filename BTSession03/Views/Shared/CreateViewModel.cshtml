@model BTSession03.Models.CreateViewModel
@{
    ViewBag.Title = "CreateViewModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Clother</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBox("Name", "", new { @class = "form-control" })
        @Html.ValidationMessage("Name", new { @class = "error" })
    </div>

    <div class="form-group">
        @Html.Label("Price")
        @Html.TextBox("Price", "", new { @class = "form-control", type = "number" })
        @Html.ValidationMessage("Price", new { @class = "error" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PriceReduce)
        @Html.TextBoxFor(m => m.PriceReduce, "", new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "error" })
    </div>
    if (Model.CategoryElectronics != null)
     {
         <div class="form-group">
             @Html.LabelFor(m => m.CategoryId)
             @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.CategoryElectronics, "Id", "Name"), "Select Category", new { @class = "form-control", type = "number" })
             @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "error" })
         </div>
     }
     else
     {
         <div class="form-group">
             @Html.LabelFor(m => m.CategoryId)
             @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.CategoryClother, "Id", "Name"), "Select Category", new { @class = "form-control", type = "number" })
             @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "error" })
         </div>
     }

    <div class="form-group">
        @Html.Label("Description")
        @Html.TextArea("Description", "", new { @class = "form-control", rows = 5 })
        @Html.ValidationMessage("Description", new { @class = "error" })
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
}



