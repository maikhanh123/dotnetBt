@model IEnumerable<BTSession03.Models.Clother>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clother</h2>

<div class="row">
    <div class="col-md-3 ">
        @Html.Action("CategoryClotherPartial")
    </div>

    <div class="col-md-9">
        @foreach (var clother in Model)
        {
            <div class="col-md-4 marginBottom">
                <div class="col-item">
                    <div class="photo">
                        <img src="@clother.ImageUrl" class="img-responsive" alt="a"/>
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price col-md-6">
                                <h5>
                                    @clother.Name
                                </h5>
                                <h5 class="price-text-color">
                                    @clother.Price.ToString("C2")
                                </h5>
                            </div>
                        </div>
                        <div class="separator clear-left">
                            <p class="btn-add">
                                <a href="#" class="hidden-sm">Add to cart</a>
                            </p>
                            <p class="btn-details">
                                <a href="#" class="hidden-sm">More details</a>
                            </p>
                        </div>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        }
        

       

        
    </div>
</div>